#!/bin/sh
### BEGIN INIT INFO
# Provides:          greengrass
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start greengrass daemon at boot time
# Description:       Enable service provided by greengrass.
### END INIT INFO

. /lib/lsb/init-functions

case "$1" in
  start)
    /greengrass/ggc/packages/1.3.0/greengrassd start
    ;;
  stop)
    /greengrass/ggc/packages/1.3.0/greengrassd stop
    ;;
  restart)
    /greengrass/ggc/packages/1.3.0/greengrassd restart
    ;;
  *)
    echo "Usage: $0 start" >&2
    exit 3
    ;;
esac